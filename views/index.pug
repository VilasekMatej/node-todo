doctype html 
html
    head
        title "Výsledky" 
        link(rel='stylesheet', href='/styl.css')
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js")
    body.bg.light
        header.bg-secondary.text-white.text-center.p-1
            h1 #{nadpis}
        main.container 
            table(class="table table-striped")
                thead
                    tr.bg-dark.text-light
                        th Název Seriálu
                        th Platforma
                        th Datum shlédnutí
                        th Vlastní hodnocení
                tbody      
                        each serial in hodnoceni 
                            tr
                                td #{serial.serial}
                                td #{serial.platforma}
                                td #{serial.shlednuti}
                                td #{serial.hodnoceni}
        footer.text-center.bg-info
            mates.container.p-0.pb-0
                p.d-flex.justify-content-center.align-items-center &copy; Matěj Vilášek    
                p
                    a(href="/") Úvodní stránka  